<resources>
    
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/arrow_back</item>
        <item name="android:actionMenuTextColor">@color/navigationBarTextColor</item>
    </style>

    <style name="CardsActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/cards_background_drawable</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomTextAppearance"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="beige_theme">
        <item name="colorPrimary">@color/beige</item>
    </style>
    <style name="red_theme">
        <item name="colorPrimary">@color/red</item>
    </style>
    <style name="pink_theme">
        <item name="colorPrimary">@color/pink</item>
    </style>
    <style name="purple_theme">
        <item name="colorPrimary">@color/purple</item>
    </style>
    <style name="dark_blue_theme">
        <item name="colorPrimary">@color/dark_blue</item>
    </style>
    <style name="blue_theme">
        <item name="colorPrimary">@color/blue</item>
    </style>
    <style name="turquoise_theme">
        <item name="colorPrimary">@color/turquoise</item>
    </style>
    <style name="dark_green_theme">
        <item name="colorPrimary">@color/dark_green</item>
    </style>
    <style name="green_theme">
        <item name="colorPrimary">@color/green</item>
    </style>
    <style name="yellow_theme">
        <item name="colorPrimary">@color/yellow</item>
    </style>
    <style name="orange_theme">
        <item name="colorPrimary">@color/orange</item>
    </style>



</resources>
