<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:theme="@style/CardsActivityTheme"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cards_background"
        android:scaleType="centerCrop"/>

    <fragment class="com.ready4s.faceiraq.and_faceiraq.view.CardsNavigationBarFragment"
        android:id="@+id/cardsNavigationBarFragment"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>


    <RelativeLayout android:id="@+id/cardsDisplayFragment"
        android:layout_below="@id/cardsNavigationBarFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

