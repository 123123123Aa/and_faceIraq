<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <CheckBox
            android:id="@+id/theme_colour_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/theme_colour_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Beige"
            android:textColor="@color/navigationBarTextColor"
            android:layout_toEndOf="@+id/theme_colour_check_box"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/theme_colour_colour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/oval"
            android:backgroundTint="@color/beige"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/navigationBarTextColor"/>
    </RelativeLayout>