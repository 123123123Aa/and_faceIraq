<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/historyRecordHeight">

    <LinearLayout android:id="@+id/deleteButton"
        android:layout_width="@dimen/deleteButtonWidth"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textAllCaps="true"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_border"
        android:gravity="center_vertical">

        <ImageView android:id="@+id/pageIcon"
            android:layout_width="@dimen/historyPageIconWidth"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|left">

            <TextView android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text=""/>

            <TextView android:id="@+id/pageUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>


</com.daimajia.swipe.SwipeLayout>